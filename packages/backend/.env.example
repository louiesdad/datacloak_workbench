# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_PATH=./data/sqlite.db
DUCKDB_PATH=./data/duckdb.db

# Logging
LOG_LEVEL=debug

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=30000

# Security Configuration
CONFIG_ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_CONFIG_API=true

# DataCloak Configuration
DATACLOAK_API_KEY=
DATACLOAK_API_ENDPOINT=https://api.openai.com/v1/chat/completions
DATACLOAK_TIMEOUT=30000
DATACLOAK_RETRY_ATTEMPTS=3
DATACLOAK_USE_MOCK=false