{
  "server": {
    "port": 3001,
    "env": "development"
  },
  "database": {
    "path": "./database.db",
    "migrations": "./src/database/migrations"
  },
  "security": {
    "adminPassword": "testpassword123",
    "jwtSecret": "your-jwt-secret-key-here-change-in-production",
    "bcryptRounds": 10
  },
  "cache": {
    "enabled": true,
    "type": "memory",
    "defaultTTL": 3600
  },
  "redis": {
    "enabled": false,
    "host": "localhost",
    "port": 6379
  },
  "jobQueue": {
    "type": "memory",
    "maxConcurrent": 3
  },
  "upload": {
    "maxFileSize": 53687091200,
    "tempDir": "./temp/uploads",
    "allowedTypes": ["csv", "xlsx", "xls", "tsv"]
  },
  "openai": {
    "model": "gpt-3.5-turbo",
    "maxTokens": 500,
    "temperature": 0.7
  },
  "features": {
    "websocket": true,
    "sse": true,
    "fileStreaming": true,
    "enhancedSecurity": true
  }
}